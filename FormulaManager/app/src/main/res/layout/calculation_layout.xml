<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/calculation_formula_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:paddingEnd="4dp"
        android:text="square area"
        android:layout_gravity="center_vertical|left"
        android:enabled="false">
    </TextView>
    <TextView
        android:id="@+id/calculation_formula_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#7c7c7c"
        android:layout_margin="2dp"
        android:paddingEnd="4dp"
        android:text="geometry">
    </TextView>
    </LinearLayout>
 <LinearLayout
     android:id="@+id/calculation_formula_content_layout"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_margin="10dp"
     android:orientation="horizontal">
 </LinearLayout>
    <LinearLayout
        android:id="@+id/calculation_formula_parameters"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/calculation_result_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:id="@+id/calculation_result_text_view"
          />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/hologreen_color"
            android:text="@string/compute"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/calculation_compute_button"/>

    </RelativeLayout>
</LinearLayout>