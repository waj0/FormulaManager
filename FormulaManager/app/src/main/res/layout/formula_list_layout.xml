<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <de.timroes.android.listview.EnhancedListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ScrollView
        android:layout_gravity="left"
        android:background="#fff3f3f3"
        android:layout_height="match_parent"
        android:layout_width="240dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">
            <TextView android:text="@string/label_categories"
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <CheckBox android:id="@+id/check_cat1"
                style="@android:style/TextAppearance.Medium"
                android:text="@string/label_category1"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox android:id="@+id/check_cat2"
                style="@android:style/TextAppearance.Medium"
                android:text="@string/label_category2"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox android:id="@+id/check_cat3"
                style="@android:style/TextAppearance.Medium"
                android:text="@string/label_category3"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>